{
    "manifest_version": 2,
    "name": "Overlayer",
    "version": "1.0.0",
    "description": "Overlay a banner onto websites",
    "short_name": "Overlayer",
    "permissions": ["activeTab", "tabs", "declarativeContent", "storage", "<all_urls>"],
    "content_scripts":[
        {
          "matches":[
            "<all_urls>"
          ],
          "js": ["content.js"],
          "css": ["content.css"]
        }
    ],
    "background": {
        "scripts": ["background.js", "hot-reload.js"],
        "persistent": false
    },
    "browser_action": {
      "default_title": "Overlayer",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      }
    }
}